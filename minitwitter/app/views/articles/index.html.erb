<p id="notice"><%= notice %></p>
<h1>Nossos Usuários</h1>
    <table>
    <% @users.each do |user| %>
      <tr>
          <td><%= user.email %></td>
          <%if !current_user.follows?(user)%>
              <td><%= link_to 'follow', follow_path(user)%></td>
              <td><%= link_to 'show', show_path(user)%></td>
          <%end%>
      </tr>
    <% end %>
    </table>
<h1>Quem você segue!</h1>
    <table>
        <% @users.each do |user| %>
          <tr>
              <%if current_user.follows?(user)%>
                  <td><%= user.email %></td>
                  <td><%= link_to 'unfollow', unfollow_path(user)%></td>
              <%end%>
          </tr>
        <% end %>
    </table>
<h1>Listing Articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

      <% @articles.each do |article| %>
          <% @users.each do |user| %>
      <%if user.id == article.user_id and current_user.follows?(user)%>
              <tr>
                <td><%= article.title %></td>
                <td><%= article.content %></td>
                <td><%= article.user %></td>
                <td><%= link_to 'Show', article %></td>
                <%if article.user_id == current_user.id%>
                    <td><%= link_to 'Edit', edit_article_path(article) %></td>
                    <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                 <%end%>
              </tr>
            <%end%>
        <%end%>
    <% end %>
  </tbody>
</table>

<br>

